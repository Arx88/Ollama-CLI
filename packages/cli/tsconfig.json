{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    // rootDir is removed to use the default
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "index.ts", // Relative to packages/cli/
    "src/**/*.ts", // Relative to packages/cli/, covers src/generated/**
    "src/**/*.tsx",
    "src/**/*.json"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../server" }]
}
